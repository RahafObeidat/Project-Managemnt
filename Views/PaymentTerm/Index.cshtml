@model IEnumerable<PMISBLayer.Entities.PaymentTerm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTermTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTermAmount)
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTermTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTermAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deliverable.DeliverableId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaymentTermId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaymentTermId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaymentTermId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
